<script>
  function MyFunction1(){
  let ans = [];
  let diplomacy = 0;// 外向性
  let cooperation = 0;//協調性
  let honesty = 0;//誠実性
  let nerve = 0;//神経症的傾向
  let open = 0;//開放性
  for(let h=1;h<11;h++){
      let q = "q" + h ;
      for (let i = 0; i<5; i++) {
	  if(document.getElementsByName(q).item(i).checked) {
	      ans[h] = parseInt(document.getElementsByName(q).item(i).value);
	  }
      }
  }
      diplomacy = 4 - ans[6] + ans[1];
      cooperation = 4 - ans[7] + ans[2];
      honesty = 4 - ans[8] + ans[3];
      nerve = 4 - ans[9] + ans[4];
      open= 4 - ans[10] + ans[5];

      console.log(diplomacy);
      console.log(cooperation);
      console.log(honesty);
      console.log(nerve);
      console.log(open);
}
  
</script>
